.events{
    display: flex;
}

.event-list-item{
    width: 24rem;
    height: 18rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    position: relative;
/*    padding: 1rem;*/
    margin: .5rem;
    overflow: hidden;
    background-color: var(--accent); /* Used if the image is unavailable */
    box-shadow: 6px 7px 6px #00000029;
    border-radius: 37px;
}

.event-list-item .bg{
    position: absolute;
    height: 100%;
    width: 100%;
    left: 0;
    top: 0;
    z-index: 0;
    display: block;
    background-image: url(<%= asset_path 'logo.png' %>);
    opacity: .5;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    -ms-filter: blur(2px);
    filter: blur(2px);
}

.event-title{
    padding: .5rem 1rem;
    color: var(--primary);
    backdrop-filter: blur(40px);
    width: auto;
    border-radius: 1rem;
    z-index: 5;
}

.event-list-item .content{
    padding: .5rem 1rem;
    font-size: 1.2em;
    display: block;
    border-radius: .5rem;
    color: var(--primary);
    z-index: 5;
    backdrop-filter: blur(40px);
}

.event-thumbnail{
    position: absolute;
    background-size: contain;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: var(--accent);
    z-index: 2;
    transition: left 1s ease-in-out;
}

.event-thumbnail .subtitle{
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    transform: translate(-50%, -50%);
    text-align: center;
    background-color: var(--accent);
    color: var(--primary);
}

.event-thumbnail img{
    opacity: 0.6;
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.event-list-item:hover .event-thumbnail{
    left: 80%;
    background-blend-mode: normal;
}

@media only screen and (max-width: 800px) {
    .events{
        flex-direction: column;
        align-items: center;
    }

    .event-list-item{
        width: 32rem;
        height: 15rem;
    }
}

