<%= form_with(model: event_template) do |form| %>
  <% if event_template.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event_template.errors.count, "error") %> prohibited this event_template from being saved:</h2>

      <ul>
        <% event_template.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :youngest, style: "display: block" %>
    <%= form.number_field :youngest %>
  </div>

  <div>
    <%= form.label :oldest, style: "display: block" %>
    <%= form.number_field :oldest %>
  </div>

  <div>
    <%= form.label :repetition, style: "display: block" %>
    <%= form.text_field :repetition %>
  </div>

  <div>
    <%= form.label :start_at, style: "display: block" %>
    <%= form.time_field :start_at %>
  </div>

  <div>
    <%= form.label "Hour", style: "display: block" %>
    <%= form.number_field :hour %>
  </div>

  <div>
    <%= form.label "Minute", style: "display: block" %>
    <%= form.number_field :minute %>
  </div>

  <div>
    <%= form.label "Place", style: "display: block" %>
    <%= form.collection_select :place_id, Place.all.order(:city), :id, ->(p){ "#{p.city} - #{p.street}" }, include_blank: false %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
