.upcoming-events{
    margin: 1rem 0;
    background: rgba(var(--on-light-bg), 0.5);
    /*border-top: var(--accent-1) solid 1px;*/
    /*border-bottom: var(--accent-1) solid 1px;*/
    box-shadow: 2px 2px 2px 1px var(--accent-1);
    box-sizing: border-box;
}

.events{
    padding: .4rem .2rem;
    display:grid;
    gap: 1rem;
    grid-auto-flow: column;
    grid-auto-columns: 31%;

    overflow-x: auto;
    overscroll-behavior-inline: contain;
    box-sizing: border-box;
}

.snap{
    scroll-snap-type: inline mandatory;
    scroll-padding-inline: .2rem;
}

.snap > *{
    scroll-snap-align: start;
}

::-webkit-scrollbar{
    border-radius: .3rem;
    height: .5rem;
    margin: 1rem;
}

::-webkit-scrollbar-track{
    border-radius: 1rem;
    /* color: var(--on-dark-bg); */
    box-shadow: inset 0 0 .8rem .8rem var(--on-dark-bg);
}

::-webkit-scrollbar-thumb{
    border-radius: 1rem;
    box-shadow: inset 0 0 .8rem .8rem var(--accent-1);
    border: solid .15rem transparent;
}

.event-list-item{
    /*width: 20rem;*/
    height: 15rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    position: relative;
    overflow: hidden;
    background-color: var(--primary); /* Used if the image is unavailable */
    box-shadow: 6px 7px 6px #00000029;
    border-radius: 37px;
}

.event-list-item .bg{
    position: absolute;
    height: 100%;
    width: 100%;
    left: 0;
    top: 0;
    z-index: 0;
    display: block;
    background-image: url(<%= asset_path 'logo.jpg' %>);
    opacity: .5;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    -ms-filter: blur(2px);
    filter: blur(2px);
}

.event-title{
    padding: .5rem 1rem;
    color: var(--primary);
    backdrop-filter: blur(40px);
    width: auto;
    border-radius: 1rem;
    z-index: 5;
}

.event-list-item .content{
    padding: .5rem 1rem;
    font-size: 1.2em;
    display: block;
    border-radius: .5rem;
    color: var(--primary);
    z-index: 5;
    backdrop-filter: blur(40px);
}

.event-thumbnail{
    position: absolute;
    background-size: contain;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: var(--accent-1);
    z-index: 2;
    transition: left 1s ease-in-out;
}

.event-thumbnail .subtitle{
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    transform: translate(-50%, -50%);
    text-align: center;
    background-color: var(--accent-1);
    color: var(--primary);
}

.event-thumbnail img{
    opacity: 0.6;
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.event-list-item:hover .event-thumbnail{
    left: 80%;
    background-blend-mode: normal;
}